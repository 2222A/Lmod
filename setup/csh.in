#!/bin/csh
if ($?tcsh) then
  set modules_shell="tcsh"
else
  set modules_shell="csh"
endif

set LMOD_CMD="@PKG@/libexec/lmod"
set LMOD_DIR="@PKG@/libexec"

set prefix  = ""
set midfix  = ""
set postfix = ";"

set histchar = \!
if ( $?histchars) then
  set histchar   = `echo $histchars | cut -c1`
  if ( "$histchar" != '\!' ) then
    set _histchars = $histchars
    set prefix  = 'set _histchars = $histchars; unset histchars;'
    set midfix  = '--localvar histchars=$_histchars'
    set postfix = ';set histchars = $_histchars'
  endif
endif


alias module  $prefix'eval `'$LMOD_CMD' '$modules_shell $midfix $histchar'*` $postfix '; 'eval `$LMOD_SETTARG_CMD -sh csh`'
alias clearMT 'eval `'$LMOD_DIR/clearMT_cmd csh'`'

alias ml      'eval `'$LMOD_DIR/ml_cmd' '$histchar'*`'

unset prefix
unset midfix
unset postfix
unset histchar

# Local Variables:
# mode: shell-script
# end:

